@page
@using ConfigurationsEntities.Entites
@model MyHospialoo.Pages.CreateModel

@{
    Layout = null; // تعطيل الـ Layout لهذه الصفحة
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/custom.css" />
    <style>
        body {
            background: linear-gradient(to right, #e2e2e2, #ffffff); /* تدرج لوني ناعم للخلفية */
            font-family: Arial, sans-serif; /* خط نصوص */
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 700px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff; /* خلفية بيضاء للنموذج */
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            border: 1px solid #ddd;
        }

        h4 {
            color: #007bff; /* لون جذاب للعنوان */
            font-size: 1.5em;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #333;
                display: block;
                margin-bottom: 5px;
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 12px;
            width: 100%;
            box-sizing: border-box;
            font-size: 1em;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                outline: none;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            border-radius: 8px;
            padding: 10px 20px;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <h4>Send Message</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Massage.Contant" class="control-label">Message Content</label>
                <textarea asp-for="Massage.Contant" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Massage.Contant" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</body>
</html>
